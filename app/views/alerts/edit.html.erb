<%= render 'form_errors' %>

<%= form_tag data_source_alert_path(@source, @alert), method: :patch,
             class: 'form-inline form-paragraph' do %>
  <%= render 'form_fields' %>

  <%= button_tag icon('floppy-o', 'Save'), class: 'btn btn-warning' %>
  <%= link_to icon('close', 'Cancel'), data_source_alerts_path(@source),
              role: :button, class: 'btn btn-default' %>
  <%= link_to icon('trash-o', 'Delete'),
              data_source_alert_path(@source, @alert), method: :delete,
              role: :button, class: 'btn btn-danger btn-delete',
              data: { confirm: 'Are you sure you want to delete the alert?' } %>
<% end %>
