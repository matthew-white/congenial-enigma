<%= render 'form_errors' %>

<%= form_tag data_source_alerts_path(@source), method: :post,
             class: 'form-inline form-paragraph' do %>
  <%= render 'form_fields' %>

  <%= button_tag icon('plus', 'Add Alert'), class: 'btn btn-success' %>
  <%= link_to icon('close', 'Cancel'), data_source_alerts_path(@source),
              role: :button, class: 'btn btn-default' %>
<% end %>
